<?xml version="1.0" encoding="utf-8"?>
<com.pbtd.mobile.widget.refresh.PullToRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/refresh"
    >

    <include layout="@layout/refresh_head" />


    <com.pbtd.mobile.widget.refresh.PullableListView
        android:id="@+id/lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:overScrollMode="never"
        />

    <include layout="@layout/load_more" />

</com.pbtd.mobile.widget.refresh.PullToRefreshLayout>