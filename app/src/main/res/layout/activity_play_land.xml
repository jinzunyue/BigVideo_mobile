<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <VideoView
        android:id="@+id/video_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ProgressBar
        android:id="@+id/pb"
        android:layout_width="51dp"
        android:layout_height="51dp"
        android:layout_centerInParent="true"
        android:indeterminateDrawable="@drawable/progress"
        android:indeterminateBehavior="repeat"
        />

    <RelativeLayout
        android:id="@+id/rl_control_top"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:gravity="center_vertical"
        android:background="@color/black"
        android:alpha="0.5"
        >

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@mipmap/arrow_left"
            android:layout_marginLeft="8dp"
            />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:layout_toRightOf="@id/iv_back"
            android:layout_marginLeft="15dp"
            android:text="人民的名义 第一集"
            />

        <ImageView
            android:id="@+id/iv_big_screen"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="17dp"
            android:src="@mipmap/big_screen"
            />

        <ImageView
            android:id="@+id/iv_collect"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:src="@mipmap/full_collection"
            android:layout_toLeftOf="@id/iv_big_screen"
            android:layout_marginRight="17dp"
            />

        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:src="@mipmap/full_share"
            android:layout_toLeftOf="@id/iv_collect"
            android:layout_marginRight="17dp"
            />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_cut_screen"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:src="@mipmap/full_cut"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="17dp"
        />

    <ImageView
        android:id="@+id/iv_lock"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:src="@drawable/select_full_lock"
        android:layout_centerVertical="true"
        android:layout_marginLeft="17dp"
        />
    
    <ImageView
        android:id="@+id/iv_center_play"
        android:layout_width="51dp"
        android:layout_height="51dp"
        android:layout_centerInParent="true"
        android:src="@drawable/select_full_center_play"
        android:visibility="gone"
        />

</RelativeLayout>
