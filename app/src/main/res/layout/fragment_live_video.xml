<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="直播"
            android:textColor="@color/bule_text"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            />
        
        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@mipmap/share"
            android:layout_alignParentRight="true"
            android:paddingRight="19dp"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="210dp">

        <VideoView
            android:id="@+id/video_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/iv_full_screen"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:src="@mipmap/full_screen"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="17dp"
            android:layout_marginRight="17dp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:gravity="center_horizontal"
        >

        <TextView
            android:id="@+id/tv_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="15sp"
            android:textColor="@color/bule_text"
            android:text="电视台"
            android:gravity="center"
            />

        <View
            android:id="@+id/view_tv"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_alignRight="@id/tv_tv"
            android:layout_alignParentBottom="true"
            />

        <TextView
            android:id="@+id/tv_program"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="节目单"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_toRightOf="@id/tv_tv"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            />

        <View
            android:id="@+id/view_program"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_alignRight="@id/tv_program"
            android:layout_alignLeft="@id/tv_program"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_text" />

    <include layout="@layout/page_live" />
</LinearLayout>