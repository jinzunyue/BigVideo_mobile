<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="39dp"
        >
        <ImageView
            android:layout_width="80dp"
            android:layout_height="21dp"
            android:src="@mipmap/logo_china_mobile"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="9dp"
            />

        <ImageView
            android:id="@+id/iv_history"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:src="@mipmap/play_history"
            android:layout_alignParentRight="true"
            android:layout_marginRight="19dp"
            android:layout_marginTop="10dp"
            />

        <RelativeLayout
            android:id="@+id/rl_search"
            android:layout_width="175dp"
            android:layout_height="29dp"
            android:layout_toLeftOf="@id/iv_history"
            android:layout_marginRight="14dp"
            android:gravity="center_vertical"
            android:background="@drawable/shape_search"
            android:layout_centerVertical="true"
            >
            <ImageView
                android:id="@+id/iv_search"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="9dp"
                android:src="@mipmap/search"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_search"
                android:layout_marginLeft="9dp"
                android:text="搜你想的"
                android:textSize="12sp"
                android:textColor="@color/gray_text"
                />
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divide_line"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        >
        <com.pbtd.mobile.widget.PagerSlidingTabStrip
            android:id="@+id/indicator"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="15sp"
            android:textColor="@color/black"
            app:pstsSelectTextColor="@color/bule_text"
            app:pstsIndicatorHeight="2dp"
            app:pstsIndicatorPaddingLeft="0dp"
            app:pstsIndicatorPaddingRight="0dp"
            app:pstsIndicatorColor="@color/bule_text"
            app:pstsUnderlineColor="@android:color/transparent"
            app:pstsDividerColor="@android:color/transparent"
            />

        <ImageView
            android:id="@+id/iv_more"
            android:layout_width="43dp"
            android:layout_height="match_parent"
            android:src="@mipmap/tab_more"
            android:paddingTop="9dp"
            android:paddingBottom="9dp"
            android:paddingLeft="11dp"
            android:paddingRight="11dp"
            />
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
</LinearLayout>
